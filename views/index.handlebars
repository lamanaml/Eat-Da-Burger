
<div class="container">
<div class="card"  style="width: 35rem;">
  <div class="card-body">
    <h2 >Eat the Burger</h2>
    <img src="/assets/img/sonic-burger.jpg" width="50px" class="card-img-top" alt="burger image">

 <p class="card-text">
      <div class="form-group">
        <div>Add a new Burger to the menu!
        </div>
        <form action="/api/burgers" method="POST">
          <input type="text" id="name" name="burger_name" >
          <button type="submit" >Add The Burger</button>
        </form>
         
      </div>
     
   
   
______________________________________________


    <div class="container">
      <div class="row">
        <div class="col-sm">
         <h4 >On the Menu</h4>    
            {{#each burgers}}
             {{#unless devoured}}
              <div>{{id}}-{{this.burger_name}}
                  <button type="btn" class="devoured btn btn-warning" data-id="{{id}}" > Devour </button>
                 



 
              </div>
              {{/unless}}
            {{/each}}
          </div>
       
          <div class="col-sm">
            <h4 >No Longer Available</h4>
            {{#each burgers}}
              {{#if this.devoured}}
                <div>{{this.id}} - {{this.burger_name}}</div>
              {{/if}}
            {{/each}}
          </div>
      </div>
    </div>
    
    </p>
  </div>
  </div>
   
 
